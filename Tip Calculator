print("Welcome to the tip calculator!")
total_bill=input("What was the total bill? $")
tip=input("How much tip would you like to give? 10, 12, or 15?")
tip_money=float(total_bill)*(int(tip)/100)
total_money_with_tip_money=float(total_bill)+tip_money
people=input("How many people to split the bill?")
for_one_person=total_money_with_tip_money/int(people)
final_amount=round(for_one_person,2)
print("Each person should pay: $"+str(final_amount))
