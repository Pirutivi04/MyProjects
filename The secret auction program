from replit import clear
from art import logo

print("Welcome to the secret auction program.")

end_of_game = False
while not end_of_game:

    bidder = input("What's your name?:")
    bid = int(input("What's your bid?:"))

    def compare(bidder,bid):
        bidders = {}
        for bidder in bidders:
            bidders[bidder] = bid
            if bid < highes_bid:
                highes_bid = bid
        print(f"Higest bidder is {bidder} with {bid} bid")


    opinion = input("Are there any other bidders? Type 'yes' or 'no'.")
    if opinion == "yes":

        end_of_game
        clear()
    else:

        clear()
        compare(bidder, bid)
        end_of_game = True

        end_of_game
